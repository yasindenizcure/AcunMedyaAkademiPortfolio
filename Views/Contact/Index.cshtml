@model List<AcunMedyaAkademiPortfolio.Models.TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>İletişim</h2>
<table class="table table-bordered">
    <tr>
        <th>İletişim ID</th>
        <th>İsim</th>
        <th>Email</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactId</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@item.Description</td>
            <td>@item.CreateDate</td>
            <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<td><a href="/Contact/CreateContact" class="btn btn-success">Yeni İletişim Ekle</a></td>