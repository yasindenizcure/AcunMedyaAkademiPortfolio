@model List<AcunMedyaAkademiPortfolio.Models.TblAdress>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Adres ID</th>
        <th>Adres</th>
        <th>Telefon</th>
        <th>Email</th>
        <th>Website</th>
    </tr>

    @foreach (var item in Model)    
    {
    <tr>
        <td>@item.AdressId</td>
        <td>@item.Adress</td>
        <td>@item.Phone</td>
        <td>@item.Email</td>
        <td>@item.Website</td>
        <td><a href="/Adress/UpdateAdress/@item.AdressId" class="btn btn-warning">Güncelle</a></td>
        <td><a href="/Adress/DeleteAdress/@item.AdressId" class="btn btn-danger">Sil</a></td>
    </tr>
    }
</table>

<td><a href="/Adress/CreateAdress" class="btn btn-success">Yeni Adres Ekle</a></td>