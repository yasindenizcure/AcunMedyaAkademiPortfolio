@model AcunMedyaAkademiPortfolio.Models.TblBanner
@{
    ViewBag.Title = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Reklam Güncelleme</h2>
<form method="post">
    <label>Reklam ID</label>
    @Html.TextBoxFor(x => x.BannerId, new { @class = "form-control" })
    <br />
    <label>Reklam Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Reklam Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>ImageUrl</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Reklamı Güncelle</button>
</form>
