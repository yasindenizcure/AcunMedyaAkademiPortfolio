@model AcunMedyaAkademiPortfolio.Models.TblCategory
@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Yeni Kategori Ekleme</h2>
<form method="post">
    <label>Kategori ID</label>
    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })

    <label>İsim</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kategori Kaydet</button>
</form>

