@model AcunMedyaAkademiPortfolio.Models.TblProfile
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Profil Güncelleme</h2>
<form method="post">
    <label>Profil ID</label>
    @Html.TextBoxFor(x => x.ProfileId, new { @class = "form-control" })
    <br />
    <label>İsim</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Adres</label>
    @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })

    <label>Telefon Numarası</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })

    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

    <label>Doğum Tarihi</label>
    @Html.TextBoxFor(x => x.Birthday, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Profili Güncelle</button>
</form>

